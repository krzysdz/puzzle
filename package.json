{
  "name": "szkola-puzzle",
  "version": "0.4.0",
  "description": "Puzzle dla p. Cwołek",
  "author": {
    "name": "krzysdz",
    "url": "https://github.com/krzysdz",
    "email": "contact@dziembala.pl"
  },
  "contributors": [
    {
      "name": "Szarp",
      "url": "https://github.com/Szarp"
    }
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm install && electron ./",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "build --dir",
    "dist": "build --x64 --ia32",
    "dist-wl": "build -wl --x64 --ia32",
    "dist-mac": "build -m",
    "dist-mwl": "build -mwl --x64 --ia32",
    "gh-pub": "build --x64 --ia32 -p always",
    "gh-pub-mac": "build -m -p always",
    "gh-pub-wl": "build -wl --x64 --ia32 -p always",
    "gh-pub-mwl": "build -mwl --x64 --ia32 -p always"
  },
  "build": {
    "appId": "pl.dziembala-mazur.szkola-puzzle",
    "productName": "Puzzle edukacyjne",
    "files": [
      "**/*",
      "build/icon.*"
    ],
    "mac": {
      "category": "public.app-category.educational-games",
      "fileAssociations": [
        {
          "ext": "jpg",
          "role": "Viewer"
        },
        {
          "ext": "jpeg",
          "role": "Viewer"
        },
        {
          "ext": "png",
          "role": "Viewer"
        }
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 420,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Game",
      "packageCategory": "Game",
      "icon": "build/icons",
      "desktop": {
        "Encoding": "UTF-8"
      }
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  },
  "keywords": [
    "puzzle",
    "szkoła",
    "zagadka",
    "obrazki",
    "rysowanie"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/krzysdz/puzzle.git"
  },
  "bugs": {
    "url": "https://github.com/krzysdz/puzzle/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^2.0.0-beta.7",
    "electron-builder": "^20.8.2",
    "eslint": "^4.19.1"
  },
  "dependencies": {
    "electron-updater": "^2.21.8"
  }
}
